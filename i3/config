bar {
    font pango:Inconsolata 16
    position bottom
    # tray_output none
    status_command bumblebee-status -m \
        weather cpu memory sensors2 battery-upower brightness date time pulseout pulsein \
        -p sensors2.chip="amdgpu-pci-0400" sensors2.showcpu="false" sensors2.showfan="false" root.path=/ time.format="%H:%M" date.format="%a, %b %d %Y" \
        memory.usedonly="true" weather.showcity="false" playerctl.format="{{title}}" playerctl.layout="playerctl.song" playerctl.hide="true" \
        -t iceberg-rainbow
    i3bar_command i3bar
      colors {
        background         $base
        statusline         $text
        focused_statusline $text
        focused_separator  $base
        focused_workspace  $base $base $mauve
        active_workspace   $base $base $blue
        inactive_workspace $base $base $surface1
        urgent_workspace   $base $base $red
        binding_mode       $base $base $surface1
      }
}

